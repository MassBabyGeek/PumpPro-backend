# Server Configuration
PORT=8081

# Database Configuration
DB_HOST=localhost
DB_NAME=pumppro_db
DB_PASSWORD=pumppro_password
DB_PORT=5432
DB_USER=pumppro_user

# Application URL
URL=http://localhost:8081

# Cloudinary Configuration (REQUIRED for persistent image storage)
# Get these from https://cloudinary.com/console
# Without these, images will be stored locally and LOST on each deployment!
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# Production Example (Render.com)
